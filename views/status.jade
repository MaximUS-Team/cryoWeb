extends layout

block content
  h1= title
  :markdown
    Welcome to #{title} [View Logs](/logs)
  div
    #button
      script(src='./javascripts/pauseCurrentTest.js')
      script(src='./javascripts/skipTestPoint.js')
      script(src='./javascripts/stopTest.js')
      script(src='./javascripts/logTest.js')

      button(class='btn', style='width: 100px; height:50px; background-color:orange', onclick='pauseCurrentTest()') Pause Current Test

      button(class='btn', style='width: 100px; height:50px; background-color:yellow', onclick='skipTestPoint()') Skip Current Test Point

      button(class='btn', style='width: 100px; height:50px; background-color:red', onclick='stopTest()') Stop Current Test

      button(class='btn', style='width: 100px; height:50px; background-color:green', onclick='logTest()') Log Test Test

        button(class='btn', style='width: 100px; height:50px; background-color:blue', onclick='logTest()') Logs



  div
  svg(class='Tchart')
  svg(class='Snpchart')
  script(src='http://code.jquery.com/jquery-1.4.2.min.js')
  script(src='http://d3js.org/d3.v3.min.js')
  script(src='./javascripts/currentTempPlot.js')
  script(src='./javascripts/currentSnpPlot.js') 