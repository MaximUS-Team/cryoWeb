extends layout

block content
  h1= title
  :markdown
    Welcome to #{title}  go to [Status](/status)?
  div

      button(class='btn', style='width: 100px; height:50px; background-color:green', onclick='logTest()') Update Log

      button(class='btn', style='width: 100px; height:50px; background-color:blue', onclick='infoLog()') Info

      button(class='btn', style='width: 100px; height:50px; background-color:yellow', onclick='warningLog()') Warning

      button(class='btn', style='width: 100px; height:50px; background-color:orange', onclick='errorLog()') Error

      button(class='btn', style='width: 100px; height:50px; background-color:red', onclick='criticalLog()') Critical

      p Press update log to retrieve last 100 logs:
      p Press Info, Error, Warning or Critical to retrieve the last entries of that log level:
      ul#lstLog






  div

  div 
  button(class='btn', style='width: 100px; height:50px; background-color:red', onclick='deleteLogs()') Clear Logs
  div

  script(src='./javascripts/logTest.js')
  script(src='./javascripts/infoLog.js')
  script(src='./javascripts/criticalLog.js')
  script(src='./javascripts/errorLog.js')
  script(src='./javascripts/warningLog.js')
  script(src='./javascripts/deleteLogs.js')
  script(src='http://code.jquery.com/jquery-1.4.2.min.js')